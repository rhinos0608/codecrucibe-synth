{
  "compilerOptions": {
    // 2025 Best Practices - Modern Target & Modules
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node", // Keep as "node" for compatibility during migration
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    
    // Strict Type Checking - 2025 Enterprise Standards
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": false, // TODO: Enable after fixing optional properties
    "noUncheckedIndexedAccess": false,   // TODO: Enable after fixing array access
    "noPropertyAccessFromIndexSignature": false, // TODO: Enable after fixing index signatures
    
    // Additional Checks - 2025 Standards (Gradual Migration)
    "noUnusedLocals": false,     // TODO: Enable after cleanup
    "noUnusedParameters": false, // TODO: Enable after cleanup
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    
    // Module Resolution & Imports
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    
    // Emit Options
    "declaration": true,
    "declarationMap": true, // Added for better debugging
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false, // Keep comments in production build
    "noEmitOnError": true,
    "preserveConstEnums": true,
    
    // Decorator Support (if needed)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Library Inclusions
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "@types/node",
      "jest" // Added for test support
    ],
    
    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/config/*": ["config/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "archive",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/testing/**/*"
  ]
}