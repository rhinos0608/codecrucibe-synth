{
  "name": "codecrucible-synth",
  "version": "3.3.3",
  "description": "Next-generation AI coding assistant with advanced caching, intelligent model persistence, and 68 comprehensive optimizations for enterprise-scale performance",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "crucible": "./dist/bin/crucible.js",
    "cc": "./dist/bin/crucible.js",
    "codecrucible": "./dist/bin/crucible.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "dev": "tsx src/index.ts",
    "test": "node node_modules/jest/bin/jest.js",
    "lint": "eslint src/**/*.ts",
    "start": "node dist/index.js",
    "cli": "npm run build && node dist/index.js",
    "install-global": "npm run build && npm link",
    "test-install": "node scripts/install-and-test.js",
    "package:win": "pkg dist/index.js --targets node18-win-x64 --output build/crucible-win.exe",
    "package:mac": "pkg dist/index.js --targets node18-macos-x64 --output build/crucible-macos",
    "package:linux": "pkg dist/index.js --targets node18-linux-x64 --output build/crucible-linux",
    "package:all": "npm run package:win && npm run package:mac && npm run package:linux",
    "desktop:dev": "npm run build && electron dist/desktop.js",
    "desktop:build": "electron-builder",
    "desktop:package": "npm run build && npm run desktop:build",
    "prepare": "npm run build",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "release": "npm run build && npm run package:all && npm version patch && npm publish",
    "apply-fixes": "node apply-agent-fixes.js",
    "test-fixes": "node test-agent-fixes.js",
    "fix-agent": "npm run apply-fixes && npm run build && npm run test-fixes"
  },
  "dependencies": {
    "@e2b/code-interpreter": "^1.5.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/lru-cache": "^7.10.9",
    "@types/sqlite3": "^3.1.11",
    "axios": "^1.6.0",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^12.0.0",
    "cross-spawn": "^7.0.3",
    "execa": "^8.0.1",
    "express": "^4.18.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.0",
    "inquirer": "^10.0.0",
    "js-yaml": "^4.1.0",
    "lru-cache": "^11.1.0",
    "micromatch": "^4.0.5",
    "node-machine-id": "^1.1.12",
    "ora": "^8.0.1",
    "socket.io": "^4.7.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "tree-kill": "^1.2.2",
    "update-notifier": "^7.0.0",
    "vm2": "^3.9.19",
    "ws": "^8.18.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cross-spawn": "^6.0.6",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.6",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "preferGlobal": true,
  "keywords": [
    "cli",
    "ai",
    "coding",
    "assistant",
    "mcp",
    "terminal",
    "multi-voice",
    "consciousness",
    "desktop",
    "local-ai",
    "ollama",
    "offline",
    "agentic",
    "react-pattern",
    "tool-calling",
    "planning",
    "autonomous",
    "ast-analysis",
    "git-integration",
    "code-understanding"
  ],
  "author": "CodeCrucible Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhinos0608/codecrucible-synth.git"
  },
  "bugs": {
    "url": "https://github.com/rhinos0608/codecrucible-synth/issues"
  },
  "homepage": "https://github.com/rhinos0608/codecrucible-synth#readme",
  "build": {
    "appId": "com.codecrucible.synth",
    "productName": "CodeCrucible Synth",
    "directories": {
      "output": "build/desktop"
    },
    "files": [
      "dist/**/*",
      "config/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "config/**/*"
    ],
    "outputPath": "build/standalone"
  }
}
